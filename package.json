{
  "name": "power-outage",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:front": "vite --open",
    "dev:server": "concurrently \"npm run tsc-be:w\" \"npm run server:dev\"",
    "node:v": "which node && node -v",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server:dev": "node server/dist-js/server.js",
    "server:prod": "node dist-server/index.cjs",
    "server:dev:reload": "nodemon server/dist-js/server.js",
    "build:server": "esbuild server/src/server.ts --bundle --platform=node --format=cjs --outfile=dist-server/index.cjs --sourcemap",
    "build:server:prod": "npm run build:server && npm run server:eco:copy",
    "server:eco:copy": "shx cp server/src/ecosystem.config.js dist-server/ecosystem.config.js",
    "build:github": "npm run build",
    "cap:sync": "npx cap sync android",
    "build:super:prod": "npm run build && npm run build:server:prod",
    "build:copy:android": "npm run build && npx capacitor copy android --inline",
    "tsc-be:w": "tsc -w --project tsconfig-be.json"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "less": "^4.5.1",
    "nodemon": "^3.1.11",
    "shx": "^0.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@capacitor-firebase/analytics": "^8.0.1",
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@jcesarmobile/ssl-skip": "^0.9.0",
    "@types/dateformat": "^5.0.3",
    "axios": "^1.13.2",
    "brotli": "^1.3.3",
    "cheerio": "^1.2.0",
    "concurrently": "^9.2.1",
    "dateformat": "^5.0.3",
    "firebase": "^12.7.0",
    "i": "^0.3.7",
    "jsdom": "^27.4.0",
    "npm": "^11.7.0",
    "rxjs": "^7.8.2",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
